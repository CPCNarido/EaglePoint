# Copy this file to `.env` in your Backend folder or export these as environment variables on your host.
# Do NOT commit secrets to git.

# Database connection used by Prisma
DATABASE_URL=postgres://<username>:<password>@<host>:<port>/<database>?sslmode=require

# JWT secrets - replace with long, random values in production
ACCESS_TOKEN_SECRET=replace-this-with-a-secure-random-string
REFRESH_TOKEN_SECRET=replace-this-with-a-secure-random-string

# If true, the server will return refresh tokens in JSON responses for native clients.
# This increases the attack surface and should be disabled unless native clients
# store refresh tokens securely (Keychain/Keystore).
ALLOW_NATIVE_REFRESH=false

# Public API URL used by production frontend builds. Example:
EXPO_PUBLIC_API_URL=https://api.yourdomain.com
